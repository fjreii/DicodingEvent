<?xml version="1.0" encoding="utf-8"?>
<androidx.prefrerence.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false">

    <PreferenceCategory
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <SwitchPreference
            android:defaultValue="false"
            android:key="keyDark"
            android:title="@string/pref_dark"
            android:summary="Enable/disable dark mode"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <SwitchPreference
            android:defaultValue="false"
            android:key="keyReminder"
            android:title="@string/pref_reminder"
            android:summary="Set reminder for nearest Event date"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>


</androidx.prefrerence.PreferenceScreen>