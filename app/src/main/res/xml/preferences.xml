<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <SwitchPreference
            android:defaultValue="false"
            android:key="keyDark"
            android:title="@string/pref_dark"
            android:summary="Enable/Turn off dark mode" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <SwitchPreference
            android:defaultValue="false"
            android:key="keyReminder"
            android:title="@string/pref_reminder"
            android:summary="Set notification for nearest Event date" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>